@model AspDotNetCoreMVCProject.Models.Student
<h1>Create new Student</h1>
<hr />

<form asp-action="Create" aps-controller="Student" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!--Name Field-->
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter your name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>



    <!--Age Field-->
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Age" class="form-label"></label>
            <input asp-for="Age" class="form-control" placeholder="Enter your Age" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
    </div>

    <!-- Email Field -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter a valid Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <!-- Phone Field-->
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Mobile" class="form-label"></label>
            <input asp-for="Mobile" class="form-control" placeholder="Enter phone number" />
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>
    </div>

    <!-- Gender Field-->
    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Gender</label><br />
            <div class="form-check form-check-inline">
                <input type="radio" asp-for="Gender" value="Male" class="form-check-input" />
                <label class="form-check-label">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input type="radio" asp-for="Gender" value="Female" class="form-check-input" />
                <label class="form-check-label">Female</label>
            </div>
        </div>
    </div>



    <!-- Submit Button -->
    <div>

        <div class="form-group mt-2">
            <button type="submit" class="btn btn-success">Create Student</button>
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </div>
    </div>






</form>