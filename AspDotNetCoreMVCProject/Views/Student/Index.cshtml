@model IEnumerable<Student>
@{
    ViewData["Title"] = "All Student information";
}
<h3>@ViewData["Title"]</h3>
<div class="d-flex align-items-center">
    <a asp-action="Create" class="btn btn-outline-primary me-2">Create</a>

    <form asp-controller="Student" asp-action="Index" class="d-flex">
        <input type="text" name="SearchString" class="form-control me-2" placeholder="Search..." />
        <button type="submit" class="btn btn-outline-success">Search</button>
    </form>
</div>

<br />


<table class="table table-bordered table-hover">
    <thead>
        <tr class="text-center">
            <th>Student Name</th>
            <th>Mobile</th>
            <th>Email</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.Name</td>
                <td>@item.Mobile</td>
                <td>@item.Email</td>
                <td>@item.Age</td>
                <td>@item.Gender</td>

                <td>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>